{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 offset-sm-1 mt-5 mb-5">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <span type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true" class="fa fa-close"></span>
                        </span>
                    </div>
                {% endfor %}

                <table class="table table-striped table-bordered">
                    <tr>
                        <td>ID</td>
                        <td>Title</td>
                        <td>Content</td>
                        <td>Edit</td>
                        <td>Delete</td>
                    </tr>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.title }}</td>
                            <td>{{ post.content }}</td>
                            <td><span class="fa fa-edit"></span></td>
                            <td><a href="{{ path('admin/post_delete', {'id': post.id}) }}"><span class="fa fa-remove" style="color: darkred"></span></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}