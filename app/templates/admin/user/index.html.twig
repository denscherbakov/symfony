{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-10 offset-sm-1 mt-4 mb-5">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <span type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true" class="fa fa-close"></span>
                        </span>
                    </div>
                {% endfor %}

                <a href="{{ path('admin/users/create') }}" class="btn btn-info mb-3">Add user</a>

                <table class="table table-striped table-bordered">
                    <tr>
                        <td>ID</td>
                        <td>Email</td>
                        <td>Name</td>
                        <td>Phone</td>
                        <td>Status</td>
                        <td>Roles</td>
                        <td>Edit</td>
                        <td>Delete</td>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.status }}</td>
                            <td>{{ user.roles | json_encode }}</td>
                            <td><a href="{{ path('admin/user_update', {'id': user.id}) }}"><span class="fa fa-edit" style="color: black"></span></a></td>
                            <td><a href="{{ path('admin/user_delete', {'id': user.id}) }}"><span class="fa fa-remove" style="color: darkred"></span></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endblock %}